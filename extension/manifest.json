{
  "manifest_version": 3,
  "name": "Sign Language Translator for Meet",
  "version": "0.1.0",
  "description": "Captures Google Meet camera frames and sends them to Roboflow inference API.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://serverless.roboflow.com/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
